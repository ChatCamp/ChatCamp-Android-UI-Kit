<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_action_content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant" />

        <TextView
            android:id="@+id/tv_action_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_action_content_image"
            android:padding="8dp"
            android:text="Al-Navaz"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>


    <View
        android:id="@+id/action_content_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_divider"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/ll_action_subcontent_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/ll_action_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</LinearLayout>